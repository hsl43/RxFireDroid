<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="20dp"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:layout_marginBottom="20dp"
    android:text="@string/messaging_instructions"
    android:textSize="14sp" />

  <TextView
    style="?android:attr/listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:layout_marginBottom="5dp"
    android:text="@string/messaging_registration_token_header" />

  <TextView
    android:id="@+id/messaging_registration_token_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:layout_marginBottom="20dp"
    android:textIsSelectable="true"
    tools:text="eqwDRsaki_g:APA91bEd_aRKql4tcm-qDypMiGhedr2W97bMcAa_U8083p9EqUitbJLBNs9ACqEbCj8D7ZS5iL4PW2JiycSkZ3itYf36eFh3srQvsuYd77DAD2UNMMeh50BJ3l8b_TBdiS1VitFnwTCY" />

  <TextView
    style="?android:attr/listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:layout_marginBottom="5dp"
    android:text="@string/messaging_subscribed_topics_header" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/messaging_topics_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:scrollbars="vertical" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:orientation="horizontal">

    <EditText
      android:id="@+id/messaging_add_topic_edit_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:hint="@string/messaging_add_topic_hint"
      android:inputType="text" />

    <Button
      android:id="@+id/messaging_add_topic_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text=">>" />

  </LinearLayout>

</LinearLayout>